# Database Configuration
DATABASE_URL=sqlite:///./rescueworks.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/rescueworks

# JWT Authentication
SECRET_KEY=CHANGE_ME_TO_A_SECURE_RANDOM_VALUE_USE_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# File Upload Configuration
RESCUEWORKS_UPLOAD_ROOT=/app/uploads

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:19006

# Email Provider Configuration (optional)
EMAIL_PROVIDER=
EMAIL_FROM_ADDRESS=

# SMS Provider Configuration (optional)
SMS_PROVIDER=
SMS_FROM_NUMBER=

# Payment Gateway Configuration (optional)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# PetFinder API Configuration (optional)
PETFINDER_API_KEY=
PETFINDER_SECRET=

# Application Settings
DEBUG=false
LOG_LEVEL=info

# Database Seeding (set to "true" to seed test data on startup)
SEED_DATABASE=false
